<p>
  <b>Username:</b>
  <%= @user.username %>
</p>

<p>
  <b>User since:</b>
  <%= @user.created_at %>
</p>

<p>
  <b>User level:</b>
  <% level = (!session[:user].nil? && session[:user].isadmin?) ? "Administrator" : "User" %>
  <%= level %>
</p>

<% if !session[:user].nil? %>
    <% if session[:user].isadmin? %>

<%= link_to 'Edit', edit_user_path(@user) %>
        <% end %>
<% end %>
